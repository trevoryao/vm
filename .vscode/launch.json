{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++: Build & Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${cwd}/vm",
            "args":["vm.cc"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Make Program",
            "postDebugTask": "Delete Files",
        }
    ]
}
